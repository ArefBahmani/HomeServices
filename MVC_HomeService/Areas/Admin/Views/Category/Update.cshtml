@using AppDomainCore.CategoryEntitie.Dtos

@model CategoryUpdateDto

<section>
    <div class="col-lg-12">
        <div class="portlet box shadow">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h3 class="title">به‌روزرسانی دسته‌بندی</h3>
                </div>
            </div><!-- /.portlet-title -->
            <div class="portlet-body">
                <div class="row">
                    <form enctype="multipart/form-data" asp-area="Admin" asp-controller="Category" asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Image" />

                        <div class="form-body">
                            <!-- نام دسته‌بندی -->
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="Name" class="form-control" type="text" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            
                            @if (Model != null && !string.IsNullOrEmpty(Model.Image))
                            {
                                <div class="form-group">
                                    <label>تصویر فعلی:</label>
                                    <img src="@Model.Image" alt="تصویر دسته‌بندی" style="border-radius: 50%" width="80" height="80" />
                                </div>
                            }

                            
                           
                            

                           
                            <div class="form-group relative">
                                <input asp-for="ProfileImgFile" type="file" class="form-control" name="ProfileImgFile" id="ProfileImgFile" />
                                <label>آپلود تصویر</label>
                                <div class="input-group round">
                                    <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید" />
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-success">
                                            <i class="icon-picture"></i> آپلود تصویر
                                        </button>
                                    </span>
                                </div>
                                <span asp-validation-for="ProfileImgFile" class="text-danger"></span>
                            </div>
                        </div>

                        <hr />
                        <div class="form-actions">
                            <button type="submit" class="btn btn-success">
                                <i class="icon-check"></i> ذخیره
                            </button>
                            <a asp-action="Index" class="btn btn-warning">بازگشت</a>
                        </div>
                    </form>
                </div>
            </div><!-- /.portlet-body -->
        </div><!-- /.portlet -->
    </div><!-- /.col-lg-12 -->
</section>

